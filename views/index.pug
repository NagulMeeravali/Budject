extends layout

block content
  .hero
    .container
      h1 Budgeter
      h3 Achieve Your Financial Goals
      a(href="/register" class="btn") Get Started
  .site-callouts
    .site-callout.understand-spending.grid
      .grid-cell.spending-content
        h3 Understand Your Spending
        p Create spending categories and see how your purchases reflect your personalized spending goals. 
      .grid-cell.spending-img.w50
    .site-callout.track-progress.grid
      .grid-cell.tracking-img.w50
      .grid-cell.tracking-content
        h3 Track Your Progress
        p View your monthly and yearly progress with detailed graphs and analysis.
  .container
    .grid
      if user
        .grid-cell.homepage-callout
          h5 See your overall progress
          a(href="/dashboard" class="btn") Go To Dashboard
        .grid-cell.homepage-callout
          h5 View your categories
          a(href="/categories" class="btn") Go To Categories
        .grid-cell.homepage-callout
          h5 Add a transaction
          a(href="/add" class="btn") Add Transaction
      else
        .grid-cell.homepage-callout
          h5 First time user? 
          p Create an accout and get started! 
          a(href="/register" class="btn") Register
        .grid-cell.homepage-callout
          h5 Returning user? 
          p Welcome back! 
          a(href="/login" class="btn") Login
      
