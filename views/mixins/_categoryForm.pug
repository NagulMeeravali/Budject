mixin categoryForm(category={})
  form(action=`/category/${category.slug}/edit` method="POST" class="categoryForm grid")
    .form-group
    label(for="title") Category
    input(type="text" name="title" value=category.title required)
    label(for="amount") Amount
    input(type="number" name="amount" value=category.amount required)
    input(type="submit" value="Submit")