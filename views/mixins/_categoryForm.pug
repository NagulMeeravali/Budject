mixin categoryForm(category={})
  form(action=`/category/${category.slug}/edit` method="POST" class="grid")
    .form-group.grid-cell.w48
      input(type="text" name="title" value=category.title)
      label(for="title") Category Title
    .form-group.grid-cell.w48.amount-field
      input(type="number" name="amount" min="0.00" step="0.01" value=(category.amount.toFixed(2)))
      label(for="amount") Amount
    .form-group.grid-cell.w100
      input(type="submit" value="Submit")