mixin registerForm()
  form(action=`/register` method="POST" class="grid")
    .form-group.grid-cell.w48
      input(type="text" name="name")
      label(for="name") Name
    .form-group.grid-cell.w48
      input(type="text" name="username")
      label(for="username") Username
    .form-group.grid-cell.w48
      input(type="email" name="email")
      label(for="email") Email
    .form-group.grid-cell.w48
      input(type="password" name="password")
      label(for="password") Password
    .form-group.grid-cell.w48
      input(type="password" name="confirm-password")
      label(for="confirm-password") Confirm Password
    .form-group.grid-cell.w48.amount-field.income-field
      input(type="number" name="income" min="0.00" step="0.01")
      label(for="income") Income
    .form-group.grid-cell.w100
      input(type="submit" value="Submit")